<?xml version="1.0"?>
<config>
  <modules>
    <Kushki_KushkiPayment>
      <version>1.0.1.0</version>
    </Kushki_KushkiPayment>
  </modules>
 
  <global>
    <fieldsets>
      <sales_convert_quote_payment>
        <custom_field_one>
          <to_order_payment>*</to_order_payment>
        </custom_field_one>
        <custom_field_two>
          <to_order_payment>*</to_order_payment>
        </custom_field_two>
      </sales_convert_quote_payment>
    </fieldsets>
     
    <helpers>
      <kushkipayment>
        <class>Kushki_KushkiPayment_Helper</class>
      </kushkipayment>
    </helpers>
 
    <blocks>
      <kushkipayment>
        <class>Kushki_KushkiPayment_Block</class>
      </kushkipayment>
    </blocks>
         
    <models>
      <kushkipayment>
        <class>Kushki_KushkiPayment_Model</class>
      </kushkipayment>
    </models>
 
    <resources>
      <kushkipayment_setup>
        <setup>
          <module>Kushki_KushkiPayment</module>
        </setup>
      </kushkipayment_setup>
    </resources>
  </global>
 
  <default>
    <payment>
      <kushkipayment>
        <active>1</active>
        <model>kushkipayment/paymentmethod</model>
        <order_status>pending</order_status>
        <title>Kushki</title>
        <payment_action>sale</payment_action>
      </kushkipayment>
    </payment>
  </default>
   
  <frontend>
    <routers>
      <kushkipayment>
        <use>standard</use>
        <args>
          <module>Kushki_KushkiPayment</module>
          <frontName>kushkipayment</frontName>
        </args>
      </kushkipayment>
    </routers>
  </frontend>
</config>